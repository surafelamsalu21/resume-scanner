# ==================================
# RESUME AI BACKEND - ENVIRONMENT CONFIGURATION
# ==================================
# Copy this file to .env and update with your actual values

# ==================================
# APPLICATION SETTINGS
# ==================================
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=CHANGE_THIS_SECRET_KEY_FOR_PRODUCTION
DEBUG=False

# ==================================
# DATABASE CONFIGURATION
# ==================================
# For Production (PostgreSQL)
DATABASE_URL=postgresql://postgres:your_db_password@db:5432/resume_ai

# For Local Development (SQLite - optional)
# DATABASE_URL=sqlite:///resume_ai.db

# Database credentials for Docker containers
DB_PASSWORD=your_secure_database_password
POSTGRES_DB=resume_ai
POSTGRES_USER=postgres

# ==================================
# JWT AUTHENTICATION
# ==================================
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_FOR_PRODUCTION

# ==================================
# OPENAI API CONFIGURATION
# ==================================
OPENAI_API_KEY=sk-proj-CHANGE_THIS_TO_YOUR_ACTUAL_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4o-mini

# ==================================
# FILE UPLOAD SETTINGS
# ==================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760

# ==================================
# REDIS CONFIGURATION (Optional)
# ==================================
REDIS_URL=redis://redis:6379/0

# ==================================
# PGADMIN CONFIGURATION (Development Only)
# ==================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# ==================================
# SERVER CONFIGURATION
# ==================================
# Port configuration for different environments
PORT=5000
HOST=0.0.0.0

# Workers configuration for Gunicorn
WORKERS=4
THREADS=2
TIMEOUT=120

# ==================================
# LOGGING
# ==================================
LOG_LEVEL=INFO

# ==================================
# DOCKER COMPOSE PROFILES
# ==================================
# Use 'dev' profile to include pgAdmin and development tools
# Example: docker-compose --profile dev up
COMPOSE_PROFILES=

# ==================================
# SECURITY SETTINGS
# ==================================
# SSL/TLS settings for production
SSL_DISABLE=True

# CORS settings
CORS_ORIGINS=*

# ==================================
# BACKUP SETTINGS
# ==================================
BACKUP_RETENTION_DAYS=7
