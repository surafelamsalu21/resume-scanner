# ==================================
# RESUME AI BACKEND - ENVIRONMENT TEMPLATE
# ==================================
# Copy this file to .env and update with your actual values

# ==================================
# APPLICATION SETTINGS
# ==================================
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=CHANGE_ME_TO_SECURE_SECRET_KEY
DEBUG=False

# ==================================
# DATABASE CONFIGURATION
# ==================================
DATABASE_URL=postgresql://postgres:CHANGE_DB_PASSWORD@db:5432/resume_ai
DB_PASSWORD=CHANGE_DB_PASSWORD
POSTGRES_DB=resume_ai
POSTGRES_USER=postgres

# ==================================
# JWT AUTHENTICATION
# ==================================
JWT_SECRET_KEY=CHANGE_ME_TO_JWT_SECRET

# ==================================
# OPENAI API CONFIGURATION
# ==================================
OPENAI_API_KEY=ENTER_YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-4o-mini

# ==================================
# FILE UPLOAD SETTINGS
# ==================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760

# ==================================
# REDIS CONFIGURATION
# ==================================
REDIS_URL=redis://redis:6379/0

# ==================================
# SERVER CONFIGURATION
# ==================================
PORT=5000
HOST=0.0.0.0
WORKERS=4
THREADS=2
TIMEOUT=120

# ==================================
# LOGGING
# ==================================
LOG_LEVEL=INFO

# ==================================
# SECURITY SETTINGS
# ==================================
CORS_ORIGINS=*
