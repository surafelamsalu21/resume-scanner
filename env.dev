# ==================================
# RESUME AI BACKEND - DEVELOPMENT ENVIRONMENT
# ==================================
# Rename this file to .env for local development

# ==================================
# APPLICATION SETTINGS
# ==================================
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-for-production
DEBUG=True

# ==================================
# DATABASE CONFIGURATION
# ==================================
# For Docker Development (PostgreSQL)
DATABASE_URL=postgresql://postgres:secretpassword@db:5432/resume_ai

# For Local Development without Docker (SQLite)
# DATABASE_URL=sqlite:///resume_ai.db

# Database credentials for Docker containers
DB_PASSWORD=secretpassword
POSTGRES_DB=resume_ai
POSTGRES_USER=postgres

# ==================================
# JWT AUTHENTICATION
# ==================================
JWT_SECRET_KEY=dev-jwt-secret-key

# ==================================
# OPENAI API CONFIGURATION
# ==================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ==================================
# FILE UPLOAD SETTINGS
# ==================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760

# ==================================
# REDIS CONFIGURATION
# ==================================
REDIS_URL=redis://redis:6379/0

# ==================================
# PGADMIN CONFIGURATION
# ==================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# ==================================
# SERVER CONFIGURATION
# ==================================
PORT=5000
HOST=0.0.0.0

# Development server settings
WORKERS=2
THREADS=1
TIMEOUT=60

# ==================================
# LOGGING
# ==================================
LOG_LEVEL=DEBUG

# ==================================
# SECURITY SETTINGS
# ==================================
SSL_DISABLE=True
CORS_ORIGINS=*
